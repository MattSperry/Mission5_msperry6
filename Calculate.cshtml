@{
    ViewData["Title"] = "Matthew Sperry";
}

@model CalcModel;

<h2>Grade Calculator</h2>
<form action="/" method="post">
    <label>Percent scored on assignments (enter a number)</label>
    <input id="assignments" type="number" asp-for="Pgrade" />
    <asp:RangeValidator ID="percentGradeValidator" runat="server" ControlToValidate="percentGrade" Type="Integer"
                        MinimumValue="0" MaximumValue="100" ErrorMessage="Percent grade must be between 0 and 100." />
    <br />
    <label>Percent scored on group projects (enter a number)</label>
    <input id="groupProjects" type="number" asp-for="Pgrade" />
    <br />
    <label>Percent scored on group quizes (enter a number)</label>
    <input id="quizes" type="number" asp-for="Pgrade" />
    <br />
    <label>Percent scored on group mid terms (enter a number)</label>
    <input id="midterm" type="number" asp-for="Pgrade" />
    <br />
    <label>Percent scored on group the final (enter a number)</label>
    <input id="final" type="number" asp-for="Pgrade" />
    <br />
    <label>Percent scored on group intex (enter a number)</label>
    <input id="intex" type="number" asp-for="Pgrade" />
    <br />
    <input class="btn btn-primary" id="calculate" type="button" value="Calculate" name="Calculate" />
    <p id="display"></p>
    <div asp-validation-summary="All"></div>
</form>

<script src="~/lib/jquery/jquery-3.6.3.min.js"></script>
<script src="~/js/site.js"></script>